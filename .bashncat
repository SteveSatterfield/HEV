

# Pull in aliases
source ~/HEVf/.bashhev

# Set HEV environment variables
hevhere

# Ensure DISPLAY value is in the form of :X.Y
# Some deep dark creepy bugs show up if DISPLAY is :X and
# in the for :1 instead of :1.0
export DISPLAY=$(echo $DISPLAY | sed -e 's/\(:[0-9]*\)$/\1.0/')

# Flag for arcfly
export ARC_HOSTNAME=$(hostname -s)

# Put screen dimensions into environment varables
`xdpyinfo 2>/dev/null | awk '
BEGIN {
    width=1920;
    height=1080;
}
{
    if ($1 == "dimensions:") {
	split($2,a,"x");
	width=a[1];
	height=a[2];
    }
}
END {
    x=(width-height)/2;
    y=0;
    width=height;
    printf "export NCAT_WINDOW_WIDTH=%d\n",width;
    printf "export NCAT_WINDOW_HEIGHT=%d\n",height;
    printf "export NCAT_WINDOW_X=%d\n",x;
    printf "export NCAT_WINDOW_Y=%s\n",y;
}'`
